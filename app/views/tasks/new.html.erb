<% provide(:title, "新規タスク作成") %>

<div class="container">
  <h1>新規タスク作成</h1>

  <%= form_with(model: @task, local: true) do |form| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- 暫定的にuser_idを1に固定（後でログイン機能と連携） -->
    <%= form.hidden_field :user_id, value: 1 %>

    <div class="form-group">
      <%= form.label :title, "タイトル" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "説明" %>
      <%= form.text_area :description, class: "form-control", rows: 3 %>
    </div>

    <div class="form-group">
      <%= form.label :priority, "優先度" %>
      <%= form.select :priority,
          options_for_select([
            ['高', '高'],
            ['中', '中'],
            ['低', '低']
          ], @task.priority),
          { prompt: '選択してください' },
          { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :due_date, "期限" %>
      <%= form.date_field :due_date, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "タスクを作成", class: "btn btn-primary" %>
      <%= link_to "キャンセル", tasks_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>