<% provide(:title, 'Edit user') %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card-form">
        <h2 class="text-center">プロフィール編集</h2>

        <%= form_with(model: @user, local: true) do |f| %>
          <%= render 'shared/error_messages', object: @user %>

          <div class="form-group">
            <%= f.label :name, "名前", class: "label-signup" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス", class: "label-signup" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "新しいパスワード（変更する場合のみ）", class: "label-signup" %>
            <%= f.password_field :password, class: "form-control", placeholder: "空白のままにすると変更されません" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "label-signup" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>
          </div>
        <% end %>

        <div class="text-center">
          <%= link_to "戻る", @user, class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
</div>