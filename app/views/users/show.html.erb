<% provide(:title, @user.name) %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="card-form">
        <h2 class="text-center"><%= @user.name %>のプロフィール</h2>

        <table class="table table-hover">
          <tbody>
            <tr>
              <th width="30%">名前</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <th>登録日</th>
              <td><%= @user.created_at.strftime("%Y年%m月%d日") %></td>
            </tr>
            <% if @user.admin? %>
            <tr>
              <th>権限</th>
              <td><span class="badge badge-danger">管理者</span></td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <% if current_user?(@user) || current_user.admin? %>
          <div class="text-center">
            <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center" style="margin-top: 15px;">
          <%= link_to "タスク一覧に戻る", tasks_path, class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
</div>
