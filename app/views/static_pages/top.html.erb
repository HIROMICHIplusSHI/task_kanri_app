<% provide(:title, "Top") %>
<div class="jumbotron">
  <div class="row">
    <div class="col-md-6">
      <h1 class="task-app-title">TaskApp</h1>
      <p class="task-app-description">TaskAppは簡易ToDo管理ツールです。</p>
      <p class="first-time-guide">↓↓初めてのご利用↓↓</p>
      <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-primary account-create-btn" %>
    </div>
    <div class="col-md-6">
      <div class="login-form-container">
        <h3>ログイン</h3>
        <%= form_with(scope: :session, url: login_path, local: true, class: "login-form") do |f| %>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              ログイン状態を保持する
            <% end %>
          </div>
          <%= f.submit "ログイン", class: "btn btn-primary login-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
